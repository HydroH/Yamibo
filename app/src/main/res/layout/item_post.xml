<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            tools:text="[测试文字]你好世界你好世界你好世界你好世界你好世界你好世界" />

        <TextView
            android:id="@+id/post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_title"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_account_circle"
            android:gravity="center_vertical"
            android:minEms="5"
            android:textSize="14sp"
            tools:text="氢氧化氢" />

        <TextView
            android:id="@+id/post_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/post_author"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_date"
            android:gravity="center_vertical"
            android:textSize="14sp"
            tools:text="2018-7-1 17:00" />

        <TextView
            android:id="@+id/post_replyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/post_title"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_message"
            android:gravity="end"
            android:textSize="14sp"
            tools:text="123" />
    </RelativeLayout>

</android.support.v7.widget.CardView>