<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_mail_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            tools:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/message_mail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/message_mail_avatar"
            android:lines="1"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            tools:text="氢氧化氢" />

        <TextView
            android:id="@+id/message_mail_abstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/message_mail_avatar"
            android:layout_toEndOf="@id/message_mail_avatar"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="14sp"
            tools:text="测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字" />
    </RelativeLayout>

</android.support.v7.widget.CardView>