<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/history_post_sector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notification_round_rect"
            android:backgroundTint="?android:attr/textColorHighlight"
            android:paddingBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:textColor="?android:attr/colorBackground"
            android:textSize="12sp"
            tools:text="海域区" />

        <TextView
            android:id="@+id/history_post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_account_circle"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textSize="12sp"
            tools:text="氢氧化氢" />

        <TextView
            android:id="@+id/history_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_post_sector"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            tools:text="你好世界你好世界你好世界你好世界你好世界你好世界" />


    </RelativeLayout>

</android.support.v7.widget.CardView>