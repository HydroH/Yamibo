<!--suppress AndroidDomInspection -->
<resources>

    <style name="YamiboTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/YamiboTheme.ActionBar</item>
        <item name="toolbarStyle">@style/YamiboTheme.Toolbar</item>
        <item name="buttonStyle">@style/YamiboTheme.Button</item>
    </style>

    <style name="YamiboTheme.NoActionBar" parent="YamiboTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="YamiboTheme.FullScreen" parent="YamiboTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="toolbarStyle">@style/YamiboTheme.Toolbar.Transparent</item>
    </style>

    <style name="YamiboTheme.ActionBar" parent="Widget.AppCompat.ActionBar" />
    <style name="YamiboTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="YamiboTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="YamiboTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="YamiboTheme.Toolbar.Transparent" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/blackTransHalf</item>
    </style>

    <style name="YamiboTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
